<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </p>

  <p>
    <%= f.label :email %> <br>
    <%= f.text_field :email %>
  </p>

   <p>
      <%= f.label :birthplace %> <br>
      <%= f.text_field :birthplace %>
    </p>

    <p>
      <%= f.label :birthdate %> <br>
      <%= f.date_select :birthdate, :include_blank => true, 
                                    :default => nil,
                                    :start_year => Date.current.year,
                                    :end_year => 1900, 
                                    :order => [:day, :month, :year]%>
    </p>

    <p> 
      <%= f.label :institution %> <br>
      <%= f.text_field :institution %> <br>
      <%= f.label :career %> <br>
      <%= f.text_field :career %>
    </p> 

    <p>
      <%= f.label :position %> <br>
      <%= f.text_field :position %>
    </p>

    <p>
      <strong> interest </strong>
      <%= render  "/interests/form", interest: @user.interests.build %>
    </p>
   
   <p>
    <%= f.label :responsibilities %> <br>
    <%= f.text_area :responsibilities %>
  </p>

  <p>
    <%= f.file_field :avatar %> <br>
    <br>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>