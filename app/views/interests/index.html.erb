<h1>Interests</h1>

<table>
  <tr>
    <th>Interest</th>
  </tr>

  <% @interests.each do |interest| %>
    <tr>
      <td><%= interest.name %>  </td>
      <td><%= link_to "Show", interest, :id => "link"%></td>
      <td><%= link_to "Edit", edit_interest_path(interest) %></td>
      <td><%= link_to "Delete", interest, method:  :delete, data: 
        {confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New Interest", new_interest_path  %>
